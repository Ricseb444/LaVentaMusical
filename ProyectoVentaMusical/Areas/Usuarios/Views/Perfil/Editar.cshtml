@model Models.ViewModels.EditarPerfilVM

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2 class="mb-4">Editar Perfil</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-area="Usuarios" asp-controller="Perfil" asp-action="Editar" method="post" novalidate>
    <div class="form-group mb-3">
        <label asp-for="NombreCompleto" class="form-label"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NumeroTarjeta" class="form-label"></label>
        <input asp-for="NumeroTarjeta" class="form-control" />
        <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="TipoTarjeta" class="form-label"></label>
        <select asp-for="TipoTarjeta" class="form-control">
            <option value="">-- Selecciona --</option>
            <option value="Crédito">Crédito</option>
            <option value="Débito">Débito</option>
        </select>
        <span asp-validation-for="TipoTarjeta" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Máscara de tarjeta -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/inputmask.min.js"
            integrity="sha512-xHeqlEdQRuHn1YTPgaK4M0LUDNTExor2HwlF1LDlUAE6+rrJ3Hv+02ld9YxFFzV/UN+UPhlQJ6qRtQAPoADcOw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Inputmask({
                mask: "9999 9999 9999 9999",
                placeholder: "_",
                showMaskOnHover: false
            }).mask(document.getElementById("NumeroTarjeta"));
        });
    </script>
}


