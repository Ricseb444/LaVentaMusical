
@using Models
@using Utilidades
@model IEnumerable<Models.Data.Canciones>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    @if (User.IsInRole(CNT.Administrador))
    {
        <body class="bg-light">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <div class="card shadow-lg">
                            <div class="card-header bg-second-primary text-white text-center">
                                <h2>¡Bienvenido, @User.Identity?.Name!</h2>
                            </div>
                            <div class="card-body text-center">
                                <p class="lead">
                                    <span>Has iniciado sesión como <strong>Administrador</strong>. Accede a las opciones avanzadas.</span>
                                </p>
                                <hr />
                                <div class="mb-4">
                                    <div class="card shadow">
                                        <div class="card-body text-center">
                                            <h5 class="card-title"><i class="fas fa-microphone-alt"></i> Administración de Artistas</h5>
                                            <p class="card-text">Gestiona artistas registrados en el sistema.</p>
                                            <a asp-area="Admin" asp-controller="Artistas" asp-action="Index" class="btn btn-success">Ir al Panel</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="card shadow">
                                        <div class="card-body text-center">
                                            <h5 class="card-title"><i class="fas fa-record-vinyl"></i> Administración de Álbumes</h5>
                                            <p class="card-text">Crea y administra los álbumes musicales.</p>
                                            <a asp-area="Admin" asp-controller="Albumes" asp-action="Index" class="btn btn-success">Ir al Panel</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="card shadow">
                                        <div class="card-body text-center">
                                            <h5 class="card-title"><i class="fas fa-bookmark"></i> Géneros Musicales</h5>
                                            <p class="card-text">Organiza y gestiona los géneros musicales.</p>
                                            <a asp-area="Admin" asp-controller="Generos" asp-action="Index" class="btn btn-success">Ir al Panel</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="card shadow">
                                        <div class="card-body text-center">
                                            <h5 class="card-title"><i class="fas fa-music"></i> Administración de Canciones</h5>
                                            <p class="card-text">Agrega, edita o elimina canciones.</p>
                                            <a asp-area="Admin" asp-controller="Canciones" asp-action="Index" class="btn btn-success">Ir al Panel</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="card shadow">
                                        <div class="card-body text-center">
                                            <h5 class="card-title">
                                                <i class="fas fa-record-vinyl"></i>Crear Venta
                                            </h5>
                                            <p class="card-text">Crea y administra una nueva venta.</p>
                                            <a asp-area="Admin" asp-controller="Comprar" asp-action="Index" class="btn btn-success">Ir al Panel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center text-muted">
                                Sistema de Gestión | ProyectoVentaMusical
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        </body>
    }
    @if (User.IsInRole(CNT.Usuario) || !User.Identity.IsAuthenticated)
    {
        <h1 class="mb-4 text-center">Lista de Canciones</h1>
        <div class="row">
            @foreach (var cancion in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(cancion.fotoCancion))
                        {
                            <img src="@cancion.fotoCancion.Replace("\\","/")"
                                 class="card-img-top"
                                 alt="@cancion.NombreCancion"
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="text-center py-5 bg-light">
                                <i class="fas fa-music fa-5x text-muted"></i>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@cancion.NombreCancion</h5>
                            <p class="card-text">
                                <strong>Precio:</strong> @cancion.Precio.ToString("C")<br>
                                <strong>Disponibles:</strong> @cancion.CantidadDisponible
                            </p>
                            <span class="@(cancion.CantidadDisponible > 0 ? "text-success" : "text-danger")">
                                @(cancion.CantidadDisponible > 0 ? "En stock" : "Agotado")
                            </span>
                        </div>

                        <div class="card-footer bg-white">
                            <div class="d-flex justify-content-between">
                                @if (!string.IsNullOrEmpty(cancion.LinkVideo))
                                {
                                    <button class="btn btn-outline-danger" onclick="verVistaPrevia(@cancion.CodigoCancion)">
                                        <i class="fab fa-youtube"></i> Ver Video
                                    </button>
                                    @if (User.IsInRole(CNT.Usuario))
                                    {
                                        <a href="@Url.Action("Index", "Comprar", new { area = "Admin" })" class="btn btn-outline-success text-center">Comprar</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Modal para vista previa de la canción -->
        <div class="modal fade" id="modalCancion" tabindex="-1" aria-labelledby="modalCancionLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="modalCancionLabel">Vista previa de la canción</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <p><strong>Canción:</strong> <span id="nombreCancion"></span></p>
                        <p><strong>Álbum:</strong> <span id="nombreAlbum"></span></p>
                        <p><strong>Artista:</strong> <span id="nombreArtista"></span></p>
                        <div class="ratio ratio-16x9">
                            <iframe id="iframeVideo" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function verVistaPrevia(id) {
                $.ajax({
                    url: `/Usuarios/Home/ObtenerCancion?id=${id}`,
                    type: 'GET',
                    success: function (data) {
                        $('#nombreCancion').text(data.nombreCancion);
                        $('#nombreAlbum').text(data.nombreAlbum);
                        $('#nombreArtista').text(data.nombreArtista);

                        let url = data.urlVideo;
                        if (url.includes("watch?v=")) {
                            url = url.replace("watch?v=", "embed/");
                        }
                        $('#iframeVideo').attr('src', url);
                        $('#modalCancion').modal('show');
                    },
                    error: function () {
                        alert("No se pudo cargar la canción.");
                    }
                });
            }
        </script>
    }
</div>