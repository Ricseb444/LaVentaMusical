@model Models.Data.GenerosMusicales

@{    
    ViewData["Title"] = "Crear Género Musical";
}

<ol class="breadcrumb mb-4 mt-4">
	<li class="breadcrumb-item"><a asp-action="Index">Géneros</a></li>
	<li class="breadcrumb-item active">Crear</li>
</ol>

<div class="card shadow mb-4">
	<div class="card-header py-3 bg-second-primary">
		<h6 class="m-0 font-weight-bold text-white">Crear un Género Musical</h6>
	</div>
	<form method="POST" asp-action="Create" enctype="multipart/form-data">
		<div class="card-body">
			<div class="row">
				<div class="col-sm-12">
					<div class="row">
						<div class="col-sm-6">
							<div class="form-row">
								<div class="form-group col-sm-12">
									<label>Nombre del Género</label>
									<input asp-for="Descripcion" class="form-control" placeholder="Ingresa el nombre del género" />
									<span asp-validation-for="Descripcion" class="text-danger"></span>
								</div>
							</div>
							<div class="form-row">								
								<div class="form-group col-sm-12">
									<label>Portada del Género</label>
									<div class="custom-file">
										<input type="file" name="archivos" id="subidaArchivo" class="custom-file-input" onchange="updateFileName(this)">
										<span class="custom-file-label" id="fileLabel">Ningún archivo seleccionado</span>
									</div>
									<span asp-validation-for="FotoGenero" class="text-danger"></span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="card-footer">
			<div class="row text-start">
				<div class="col">
					<button type="submit" class="btn btn-primary">Crear Género</button>
					<a asp-action="Index" class="btn btn-success">Volver atras</a>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
	<script>
		function updateFileName(input) {
			let fileName = input.files.length > 0 ? input.files[0].name : "Ningún archivo seleccionado";
			document.getElementById("fileLabel").textContent = fileName;
		}
	</script>
}


